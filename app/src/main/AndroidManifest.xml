<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialApp">
        <activity
            android:name=".SelectMemberActivity"
            android:exported="false" />
        <activity
            android:name=".SelectVideoActivity"
            android:exported="false" />
        <activity
            android:name=".SelectImageActivity"
            android:exported="false" />
        <activity
            android:name=".PostOptionsActivity"
            android:exported="false" />
        <activity
            android:name=".OwnSlidanetContentActivity"
            android:exported="false" />
        <activity
            android:name=".OwnLegacyContentActivity"
            android:exported="false" />
        <activity
            android:name=".FollowingSlidanetContentActivity"
            android:exported="false" />
        <activity
            android:name=".FollowingLegacyContentActivity"
            android:exported="false" />
        <activity
            android:name=".ComposeTextActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>